<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LockBox.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:local="clr-namespace:LockBox"
    Shell.FlyoutBehavior="Disabled"
    Title="LockBox">

    <ShellContent Route="ListScreen" ContentTemplate="{DataTemplate local:ListScreen}" />
    <ShellContent Route="AddScreen" ContentTemplate="{DataTemplate local:AddScreen}"/>
    <ShellContent Route="TransferScreen" ContentTemplate="{DataTemplate local:TransferScreen}"/>
    <ShellContent Route="Login" ContentTemplate="{DataTemplate local:LockScreen}"/>
    <ShellContent Route="Setup" ContentTemplate="{DataTemplate local:Setup}"/>
    <ShellContent Route="QRReader" ContentTemplate="{DataTemplate local:QRReader}"/>
    <ShellContent Route="TransferScreen" ContentTemplate="{DataTemplate local:TransferScreen}"/>
    <ShellContent Route="QrTransfer" ContentTemplate="{DataTemplate local:QrTransfer}"/>
    <ShellContent Route="Edit" ContentTemplate="{DataTemplate local:EditScreen}"/>
</Shell>
